{% extends "layout.njk" %} <!-- nunjucks: vai para arquivo layout.njk -->

{% block head %} <!-- nunjucks: title desse bloco Ã© recebido em layout.njk -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <title>Foodfy</title>
{% endblock %}
  
{% block content %}

  <div id="wrapper">
    <div id="wrapper-text">
      <h1>As melhores receitas</h1>
      <p>
        Aprenda a construir os melhores pratos com receitas criadas por profissionais
        do mundo inteiro.
      </p>
    </div>
    <img src="./assets/chef.png" alt="">
  </div>

  <h2>Mais acessadas</h2>

  <section class="recipes">
    {% for recipe in recipes %}
      <!-- recipes -->
      <div class="recipe" id="{{recipe.id}}">
        <div class="recipe-img-container">
          <img src="./assets/{{recipe.id}}.png" alt="">
        </div>
        <div class="recipe-content">
          <p>{{recipe.title}}</p>
        </div>
        <div class="recipe-info">
          <p>{{recipe.author}}</p>
        </div>
      </div>
    {% endfor %}

  </section>

  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <i class="material-icons">close</i>
      </a>
      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
      <p id="recipe-anchor">recipe anchor point</p>
      <p id="recipe-name">algo 1</p>
      <p id="recipe-owner">algo 2</p>
    </div>
  </div>

  <script src="scripts.js"></script>

  <footer>
  <p>Todos os direitos reservados, receitas Foodfy.</p>
  </footer>

</body>

{% endblock %}
