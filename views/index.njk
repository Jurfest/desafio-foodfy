{% extends "layout.njk" %} <!-- nunjucks: vai para arquivo layout.njk -->

{% block head %} <!-- nunjucks: title desse bloco é recebido em layout.njk -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}
  
{% block content %}

  <div id="wrapper">
    <div id="wrapper-text">
      <h1>As melhores receitas</h1>
      <p>
        Aprenda a construir os melhores pratos com receitas criadas por profissionais
        do mundo inteiro.
      </p>
    </div>
    <img src="./assets/chef.png" alt="">
  </div>

  <h2>Mais acessadas</h2>

  <section class="recipes">
  
    <!-- recipe one -->
    <div class="recipe" id="burger">
      <div class="recipe-img-container">
        <img src="./assets/burger.png" alt="">
      </div>
      <div class="recipe-content">
        <p>Triplo bacon burger</p>
      </div>
      <div class="recipe-info">
        <p>por Jorge Relato</p>
      </div>
    </div>

    <!-- recipe two -->
    <div class="recipe" id="pizza">
      <div class="recipe-img-container">
        <img src="./assets/pizza.png" alt="">
      </div>
      <div class="recipe-content">
        <p>Pizza 4 estações</p>
      </div>
      <div class="recipe-info">
        <p>por Fabiana Melo</p>
      </div>
    </div>

    <!-- recipe three -->
    <div class="recipe" id="espaguete">
      <div class="recipe-img-container">
        <img src="./assets/espaguete.png" alt="">
      </div>
      <div class="recipe-content">
        <p>Espaguete ao alho</p>
      </div>
      <div class="recipe-info">
        <p>por Júlia Kinoto</p>
      </div>
    </div>

    <!-- recipe four -->
    <div class="recipe" id="lasanha">
      <div class="recipe-img-container">
        <img src="./assets/lasanha.png" alt="">
      </div>
      <div class="recipe-content">
        <p>Lasanha mac n' cheese</p>
      </div>
      <div class="recipe-info">
        <p>por Juliano Vieira</p>
      </div>
    </div>

    <!-- recipe five -->
    <div class="recipe" id="lasanha">
      <div class="recipe-img-container">
        <img src="./assets/doce.png" alt="">
      </div>
      <div class="recipe-content">
        <p>Docinhos de pão-do-céu</p>
      </div>
      <div class="recipe-info">
        <p>por Ricardo Golvea</p>
      </div>
    </div>

    <!-- recipe six -->
    <div class="recipe" id="asinhas">
      <div class="recipe-img-container">
        <img src="./assets/asinhas.png" alt="">
      </div>
      <div class="recipe-content">
        <p>Asinhas de frando ao barbecue</p>
      </div>
      <div class="recipe-info">
        <p>por Vania Steroski</p>
      </div>
    </div>

  </section>

  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <i class="material-icons">close</i>
      </a>
      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
      <p id="recipe-anchor">recipe anchor point</p>
      <p id="recipe-name">algo 1</p>
      <p id="recipe-owner">algo 2</p>
    </div>
  </div>

  <script src="scripts.js"></script>

  <footer>
  <p>Todos os direitos reservados, receitas Foodfy.</p>
  </footer>

</body>

{% endblock %}
