{% extends "layout.njk" %}

{% block head %}
  <title>Gerenciar Receitas | Foodfy Admin</title>
{% endblock %}

{% block header %}
  <a href="/">
    <img src="../../../../assets/logo_dark_mode.png" alt="">
  </a>
{% endblock %}

{% block content %}
      <div class="create-title">
        <h3>Criando receita</h3>
        <a href="/admin/recipes">Salvar receita</a>
      </div>

      <section class="edit-recipe-page">
        <!-- recipe -->
        <div class="edit-image">
          <h6>Imagem da receita</h6>
          <div class="image-box">
            <input 
              type="text" 
              name="recipe-image" 
              value="" 
              placeholder="Imagem da receita" 
            />
          </div>
        </div>

        <div id="ingredients">
          <h6>Ingredientes</h6>
            <div class="ingredient"> 
              <input type="text" name="ingredients[]" value="" placeholder="Ingrediente" />
            </div> 
        </div>
        <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

        <div id="preparations">
          <h6>Modo de preparo</h6>
            <div class="preparation-box">
              <input type="text" name="preparation[]" value="" placeholder="Modo de preparo" />
            </div>
        </div>
        <button type="button" class="add-preparation">Adicionar novo passo</button>

        <div class="edit-info">
          <h6>Informações adicionais</h6>
          <div class="info-box">
            <input 
              type="text" 
              name="preparation[]" 
              value="" 
              placeholder="Informações adicionais" 
            />
          </div>
        </div>

      </section>

      <script src="/admin_scripts.js"></script>
      <script src="/addField.js"></script>

{% endblock %}